<?xml version="1.0" encoding="utf-8"?>
<log4net>
  <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender" >
    <layout type="log4net.Layout.PatternLayout">
      <param name="Header" value="[Header]\r\n" />
      <param name="Footer" value="[Footer]\r\n" />
      <param name="ConversionPattern" value="%d{HH:mm:ss} %-5level %-20logger{1} - %message%newline" />
    </layout>
  </appender>
  <appender name="FileAppender" type="log4net.Appender.FileAppender">
    <file value="C:/temp/slicerlog.txt" />
    <appendToFile value="false" />
    <immediateFlush value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="Header" value="[Header]\r\n" />
      <param name="Footer" value="[Footer]\r\n" />
      <param name="ConversionPattern" value="%d{HH:mm:ss} %-5level %-20logger{1} - %message%newline" />
    </layout>
  </appender>
  <logger name="Ppl.Pragma.Slicing.DefUse" additivity="false">
    <level value="OFF" />
  </logger>
  <logger name="Ppl.Pragma.Slicing.May.MayAliasingSolver" additivity="false">
    <level value="OFF" />
  </logger>
  <!--
  <logger name="Ppl.Pragma.Slicing.Misc.DependencyResolver" additivity="false">
    <level value="OFF" />
  </logger>
  -->
  <root>
    <level value="DEBUG" />
    <!--
    <appender-ref ref="ConsoleAppender"/>
    -->
    <appender-ref ref="FileAppender"/>
  </root>
</log4net>